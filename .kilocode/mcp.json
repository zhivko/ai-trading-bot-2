{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "./"
      ],
      "disabled": false,
      "alwaysAllow": []
    },
    "puppeteer": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-puppeteer",
        "--device-scale-factor=1"
      ],
      "alwaysAllow": [
        "puppeteer_evaluate",
        "puppeteer_fill",
        "puppeteer_click",
        "puppeteer_screenshot",
        "puppeteer_select",
        "puppeteer_hover",
        "puppeteer_navigate"
      ]
    }
  }
}